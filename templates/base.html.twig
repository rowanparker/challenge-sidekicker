<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Job Board{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="bg-light">
            <div class="container bg-light py-3">
                <div class="row">
                    <div class="col-12 fs-4 fw-light">
                        Job Board
                    </div>
                </div>
            </div>
        </div>
        {% block body %}
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        View as:<br>
                        <a href="{{ path('html_index') }}">Rendered HTML</a><br>
                        <a href="{{ path('js_index') }}">Svelte JS</a>
                    </div>
                </div>
            </div>
        {% endblock %}
    </body>
</html>
